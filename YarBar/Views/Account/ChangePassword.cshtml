@model YarBar.Models.ViewModels.ChangePasswordViewModel

<h2 class="display-6" style="margin-bottom: 3rem">Смена пароля</h2>

<form method="post" asp-action="ChangePassword" asp-controller="Account" class="col-md-8 col-md-offset-2">
    <div asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />
    <div class="mb-3">
        <label asp-for="OldPassword">Старый пароль</label>
        <input type="password" asp-for="OldPassword" class="form-control" />
        <span asp-validation-for="OldPassword" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="NewPassword">Новый пароль</label>
        <input type="password" asp-for="NewPassword" class="form-control" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-info" style="margin-top:2rem" />
    </div>
</form>