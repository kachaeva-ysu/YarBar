@model YarBar.Models.Place

<h2 class="display-6" style="margin-bottom: 3rem">@Model.Name</h2>

<div class="row">
    <div class="col" >
        <h6 class="card-title">@Model.PlaceType.Name</h6>
        <h6 class="card-title">@Model.Rating &#9733</h6>
        <p class="card-text">@Model.Description </p>
    </div>
    <div class="col">
        <h6 class="card-title">Отзывы</h6>
        @{
            if (Model.Reviews.Count()>0)
            {
                foreach (var item in Model.Reviews)
                {
                        <br />
                        <h6>@item.Score &#9733</h6>
                        <p>
                            @item.Comment
                        </p>
                }
            }
            else
            {
                    <br />
                    <p> Еще нет отзывов </p>
            }
        }
        <a asp-action="LeaveReview" asp-controller="Home" asp-route-id="@Model.Id" class="btn btn-info">Оставить отзыв</a>
    </div>
</div>
<div class="row" align="center">
    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary" style="max-width:10rem; margin-top:3rem">Назад</a>
</div>

