@model IEnumerable<YarBar.Models.Place>

<h2 class="display-4" style="margin-bottom: 3rem">Лучшие заведения Ярославля</h2>

@using (Html.BeginForm("Index", "Home", FormMethod.Get))
{
    <label>Тип:</label>
    @Html.DropDownList("typeId", ViewBag.PlaceTypes as SelectList)
    <input class="btn btn-info" type="submit" value="Показать">
}

@if(Model.Count()==0)
{
    <h2 class="display-6">К сожалению, по Вашему запросу ничего не найдено</h2>
}

<div class="container">
    <div class=" row justify-content-around row-cols-4">
        @foreach(var place in Model)
        {
        <div class="mt-auto p-2">
        <div class="card" style="width: 18rem; height:12rem;">
            <div class="card-body">
                <h5 class="card-title">@place.Name</h5>
                <h6 class="card-subtitle mb-2 text-muted">@place.PlaceType.Name</h6>
                <h6 class="card-subtitle mb-2 text-muted">@place.Rating &#9733</h6>
                <a asp-action="Details" asp-route-id="@place.Id" class="btn btn-info">
                    Подробно
                </a>
            </div>
        </div>
        </div>
        }
    </div>
</div>
