@using Microsoft.AspNetCore.Identity;

@model YarBar.Models.ViewModels.UserWithRoles

<h2 class="display-6" style="margin-bottom: 3rem">Вы уверены, что хотите удалить этого пользователя?</h2>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class = "col-sm-2">
            Роли
        </dt>
        <dd class = "col-sm-10">
            @foreach(var role in Model.Roles)
            {
                <span>@role </span>
            }
        </dd>
    </dl>
    
    <form asp-action="DeleteUser" asp-route-id=@Model.User.Id>
        <input type="submit" value="Удалить" class="btn btn-danger" />
    </form>
    <div class="row" align="center">
        <a asp-action="Index" class="btn btn-outline-secondary" style="max-width:10rem; margin-top:3rem">Назад</a>
    </div>
</div>
