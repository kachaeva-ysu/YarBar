@model Microsoft.AspNetCore.Identity.IdentityRole

<h2 class="display-6" style="margin-bottom: 3rem">Вы уверены, что хотите удалить эту роль?</h2>
<div>
    <dl class="row">
        <dt class = "col-sm-2">Роль</dt>
        <dd class = "col-sm-10">@Model.Name</dd>
    </dl>
    
    <form asp-action="DeleteRole" asp-route-id=@Model.Id>
        <input type="submit" value="Удалить" class="btn btn-danger" />
    </form>
    <div class="row" align="center">
        <a asp-action="GetRoles" class="btn btn-outline-secondary" style="max-width:10rem; margin-top:3rem">Назад</a>
    </div>
</div>

