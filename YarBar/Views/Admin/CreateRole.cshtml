@model string

<h2 class="display-6" style="margin-bottom: 3rem">Добавить роль</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRole" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label for="name" class="control-label" style="margin-bottom:0.5rem">Новая роль</label>
                <input name="name" class="form-control" style="margin-bottom:1rem"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-info" style="margin-top:1rem"/>
            </div>
        </form>
    </div>
</div>

<div class="row" align="center">
    <a asp-action="GetRoles" class="btn btn-outline-secondary" style="max-width:10rem; margin-top:3rem">Назад</a>
</div>
